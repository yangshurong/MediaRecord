<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="74dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/CardView_daily_record_item"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:cardElevation="0dp">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_record_show_type_item"
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/textView_daily_record_item"
                    android:layout_width="295dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:gravity="center"
                    android:text="TextView"
                    android:textSize="26sp" />

            </LinearLayout>


            <ImageButton
                android:id="@+id/imageButton_record_item_close"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="380dp"
                android:background="@drawable/record_delete_item"
                tools:srcCompat="@tools:sample/avatars" />


        </androidx.coordinatorlayout.widget.CoordinatorLayout>


    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/daily_record_item_underline"
        android:layout_width="380dp"
        android:layout_height="2dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="#CCCCCC"></View>

</LinearLayout>